{
	"name": "configmate-gui",
	"displayName": "ConfigMate",
	"description": "",
	"version": "0.1.0",
	"publisher": "ConfigMate",
	"private": true,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/ConfigMate/configmate-gui"
	},
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"main": "./out/extension.js",
	"activationEvents": [
		"onStartupFinished"
	],
	"contributes": {
		"viewsWelcome": [
			{
				"view": "rulebooks",
				"contents": "No rulebooks found.\n[Add Rulebook](command:rulebooks.addRulebook)"
			},
			{
				"view": "configFiles",
				"contents": "Select a rulebook above to view related files, or\n[Add Config File to Rulebook](command:configFiles.addConfigFile)"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "configmate",
					"title": "ConfigMate",
					"icon": "$(beaker)"
				}
			]
		},
		"views": {
			"configmate": [
				{
					"id": "rulebooks",
					"name": "Rulebooks",
					"icon": "$(book)",
					"contextualTitle": "ConfigMate"
				},
				{
					"id": "configFiles",
					"name": "Configuration Files",
					"icon": "$(settings)",
					"contextualTitle": "ConfigMate"
				}
			]
		},
		"commands": [
			{
				"command": "extension.runGoServer",
				"title": "Run Go Server"
			},
			{
				"command": "rulebooks.openRulebook",
				"title": "Open Rulebook"
			},
			{
				"command": "rulebooks.refreshRulebooks",
				"title": "Refresh Rulebooks",
				"icon": "$(refresh)"
			},
			{
				"command": "rulebooks.addRulebook",
				"title": "Add Rulebook",
				"icon": "$(add)"
			},
			{
				"command": "rulebooks.deleteRulebook",
				"title": "Delete Rulebook",
				"icon": "$(trash)"
			},
			{
				"command": "configFiles.openConfigFile",
				"title": "Open Config File"
			},
			{
				"command": "configFiles.refreshConfigFiles",
				"title": "Refresh Config Files",
				"icon": "$(refresh)"
			},
			{
				"command": "configFiles.addConfigFile",
				"title": "Add Config File",
				"icon": "$(add)"
			},
			{
				"command": "configFiles.deleteConfigFile",
				"title": "Delete Config File",
				"icon": "$(trash)"
			},
			{
				"command": "configMate.checkConfigFile",
				"title": "Check Config File",
				"icon": "$(check)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "rulebooks.refreshRulebooks",
					"when": "view == rulebooks",
					"group": "navigation"
				},
				{
					"command": "rulebooks.addRulebook",
					"when": "view == rulebooks",
					"group": "navigation"
				},
				{
					"command": "configFiles.refreshConfigFiles",
					"when": "view == configFiles",
					"group": "navigation"
				},
				{
					"command": "configFiles.addConfigFile",
					"when": "view == configFiles",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "rulebooks.deleteRulebook",
					"when": "view == rulebooks && viewItem == rulebook",
					"group": "inline"
				},
				{
					"command": "configFiles.deleteConfigFile",
					"when": "view == configFiles && viewItem == configFile",
					"group": "inline"
				},
				{
					"command": "configMate.checkConfigFile",
					"when": "view == configFiles && viewItem == configFile",
					"group": "inline"
				},
				{
					"command": "configFiles.addConfigFile",
					"when": "view == rulebooks && viewItem == rulebook",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run configmate && npm run compile",
		"configmate": "cd bin && go build ConfigMate.go && go run ConfigMate.go",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "eslint --ext .ts --ignore-path .gitignore .",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/fs-extra": "^11.0.2",
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "^16.18.34",
		"@types/sinon": "^10.0.19",
		"@types/vscode": "^1.73.0",
		"@typescript-eslint/eslint-plugin": "^5.42.0",
		"@typescript-eslint/parser": "^5.42.0",
		"@vscode/test-electron": "^2.3.4",
		"axios": "^1.5.1",
		"child_process": "^1.0.2",
		"eslint": "^8.49.0",
		"mocha": "^10.2.0",
		"sinon": "^16.1.0",
		"typescript": "~5.1.3",
		"url": "^0.11.3"
	},
	"dependencies": {
		"fs-extra": "^11.1.1"
	}
}
