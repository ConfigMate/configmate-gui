{
	"name": "configmate-gui",
	"displayName": "ConfigMate",
	"description": "",
	"version": "0.1.0",
	"publisher": "ConfigMate",
	"private": true,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/ConfigMate/configmate-gui"
	},
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:json",
		"onLanguage:jsonc"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsWelcome": [
			{
				"view": "rulebooks",
				"contents": "No rulebooks found.\n[Add Rulebook](command:rulebooks.addEntry)"
			},
			{
				"view": "configFileExplorer",
				"contents": "Select a rulebook above, or\n[Open File](command:configFileExplorer.openFile)"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "configmate",
					"title": "ConfigMate",
					"icon": "$(beaker)"
				}
			]
		},
		"views": {
			"configmate": [
				{
					"id": "rulebooks",
					"name": "Rulebooks",
					"icon": "$(book)",
					"contextualTitle": "ConfigMate"
				},
				{
					"id": "configFileExplorer",
					"name": "Configuration Files",
					"icon": "$(settings)",
					"contextualTitle": "ConfigMate"
				},
				{
					"id": "jsonOutline",
					"name": "Json Outline",
					"when": "jsonOutlineEnabled"
				}
			]
		},
		"commands": [
			{
				"command": "rulebooks.refreshEntry",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "rulebooks.addEntry",
				"title": "Add",
				"icon": "$(add)"
			},
			{
				"command": "rulebooks.editEntry",
				"title": "Edit",
				"icon": "$(edit)"
			},
			{
				"command": "rulebooks.deleteEntry",
				"title": "Delete",
				"icon": "$(trash)"
			},
			{
				"command": "jsonOutline.refresh",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "jsonOutline.refreshNode",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "jsonOutline.renameNode",
				"title": "Rename",
				"icon": "$(edit)"
			},
			{
				"command": "configFileExplorer.refreshFile",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "configFileExplorer.openFile",
				"title": "Open File",
				"icon": "$(folder-opened)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "rulebooks.refreshEntry",
					"when": "view == rulebooks",
					"group": "navigation"
				},
				{
					"command": "jsonOutline.renameNode",
					"when": "view == jsonOutline"
				},
				{
					"command": "rulebooks.addEntry",
					"when": "view == rulebooks"
				},
				{
					"command": "jsonOutline.refresh",
					"when": "view == jsonOutline",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "rulebooks.editEntry",
					"when": "view == rulebooks && viewItem == rulebook",
					"group": "inline"
				},
				{
					"command": "rulebooks.deleteEntry",
					"when": "view == rulebooks && viewItem == rulebook"
				},
				{
					"command": "jsonOutline.renameNode",
					"when": "view == jsonOutline"
				},
				{
					"command": "jsonOutline.refreshNode",
					"when": "view == jsonOutline",
					"group": "inline"
				},
				{
					"command": "configFileExplorer.refreshFile",
					"when": "view == configFileExplorer && viewItem == file",
					"group": "inline"
				}
			]
		},
		"configuration": [
			{
				"title": "JSON Outline",
				"properties": {
					"jsonOutline.autorefresh": {
						"type": "boolean",
						"default": true
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "eslint \"src/**/*.ts\"",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"dependencies": {
		"jsonc-parser": "^0.4.2",
		"minimist": "^1.2.6",
		"mkdirp": "^0.5.1",
		"rimraf": "^2.6.2"
	},
	"devDependencies": {
		"@types/mkdirp": "^0.5.2",
		"@types/mocha": "^10.0.1",
		"@types/node": "^16.18.34",
		"@types/rimraf": "^2.0.2",
		"@types/vscode": "^1.73.0",
		"@typescript-eslint/eslint-plugin": "^5.42.0",
		"@typescript-eslint/parser": "^5.42.0",
		"@vscode/test-electron": "^2.3.4",
		"eslint": "^8.49.0",
		"mocha": "^10.2.0",
		"typescript": "^5.1.3"
	}
}
