{
	"name": "configmate-gui",
	"displayName": "ConfigMate",
	"description": "",
	"version": "0.1.0",
	"publisher": "ConfigMate",
	"private": true,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/ConfigMate/configmate-gui"
	},
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsWelcome": [
			{
				"view": "rulebooks",
				"contents": "No rulebooks found.\n[Add Rulebook](command:rulebooks.addEntry)"
			},
			{
				"view": "configFiles",
				"contents": "Select a rulebook above, or\n[Open Folder](command:vscode.openFolder)"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "configmate",
					"title": "ConfigMate",
					"icon": "$(beaker)"
				}
			]
		},
		"views": {
			"configmate": [
				{
					"id": "rulebooks",
					"name": "Rulebooks",
					"icon": "$(book)",
					"contextualTitle": "ConfigMate"
				},
				{
					"id": "configFiles",
					"name": "Configuration Files",
					"icon": "$(settings)",
					"contextualTitle": "ConfigMate"
				}
			]
		},
		"commands": [
			{
				"command": "extension.checkConfigFiles",
				"title": "Check All Config Files",
				"icon": "$(check)"
			},
			{
				"command": "extension.checkConfigFile",
				"title": "Check Config File",
				"icon": "$(check-all)"
			},
			{
				"command": "rulebooks.refreshEntry",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "rulebooks.addEntry",
				"title": "Add",
				"icon": "$(add)"
			},
			{
				"command": "rulebooks.editEntry",
				"title": "Edit",
				"icon": "$(edit)"
			},
			{
				"command": "rulebooks.deleteEntry",
				"title": "Delete",
				"icon": "$(trash)"
			},
			{
				"command": "extension.refreshConfigFiles",
				"title": "Refresh Config Files",
				"icon": "$(refresh)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "extension.checkConfigFile",
					"when": "view == configFiles",
					"group": "navigation"
				},
				{
					"command": "rulebooks.refreshEntry",
					"when": "view == rulebooks",
					"group": "navigation"
				},
				{
					"command": "rulebooks.addEntry",
					"when": "view == rulebooks"
				},
				{
					"command": "extension.refreshConfigFiles",
					"when": "view == configFiles",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "rulebooks.editEntry",
					"when": "view == rulebooks && viewItem == rulebook",
					"group": "inline"
				},
				{
					"command": "rulebooks.deleteEntry",
					"when": "view == rulebooks && viewItem == rulebook"
				},
				{
					"command": "extension.checkConfigFile",
					"when": "view == configFiles && viewItem == configFile",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run configMate && npm run compile",
		"configMate": "cd bin && go build ConfigMate.go",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "eslint --ext .ts --ignore-path .gitignore .",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "^16.18.34",
		"@types/vscode": "^1.73.0",
		"@typescript-eslint/eslint-plugin": "^5.42.0",
		"@typescript-eslint/parser": "^5.42.0",
		"@vscode/test-electron": "^2.3.4",
		"eslint": "^8.49.0",
		"mocha": "^10.2.0",
		"typescript": "~5.1.3"
	}
}
