{
	"name": "configmate-gui",
	"displayName": "ConfigMate",
	"description": "",
	"version": "0.2.14",
	"publisher": "ConfigMate",
	"private": true,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/ConfigMate/configmate-gui"
	},
	"categories": [
		"Other"
	],
	"engines": {
		"vscode": "^1.75.0"
	},
	"activationEvents": [
		"onLanguage:plaintext"
	],
	"main": "./client/out/main",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "ConfigMate configuration",
			"properties": {
				"configMateServer.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"configMateServer.port": {
					"scope": "resource",
					"type": "number",
					"default": 10005,
					"description": "Controls the port on which the server runs."
				},
				"configMateServer.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
		"views": {
			"configmate": [
				{
					"id": "rulebooks",
					"name": "Rulebooks",
					"icon": "$(book)",
					"contextualTitle": "ConfigMate"
				},
				{
					"id": "configFiles",
					"name": "Configuration Files",
					"icon": "$(settings)",
					"contextualTitle": "ConfigMate"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "rulebooks",
				"contents": "No rulebooks found.\n[Add Rulebook](command:rulebooks.addRulebook)"
			},
			{
				"view": "configFiles",
				"contents": "Select a rulebook above to view its configuration files"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "configmate",
					"title": "ConfigMate",
					"icon": "$(beaker)"
				}
			]
		},
		"commands": [
			{
				"command": "rulebooks.openRulebook",
				"category": "Custom",
				"title": "Open Rulebook"
			},
			{
				"command": "rulebooks.refreshRulebooks",
				"title": "Refresh Rulebooks",
				"icon": "$(refresh)"
			},
			{
				"command": "rulebooks.addRulebook",
				"title": "Add Rulebook",
				"icon": "$(add)"
			},
			{
				"command": "rulebooks.deleteRulebook",
				"title": "Delete Rulebook",
				"icon": "$(trash)"
			},
			{
				"command": "configFiles.openConfigFile",
				"category": "Custom",
				"title": "Open Config File"
			},
			{
				"command": "configFiles.refreshConfigFiles",
				"title": "Refresh Config Files",
				"icon": "$(refresh)"
			},
			{
				"command": "configMate.check",
				"title": "Check",
				"icon": "$(check)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "rulebooks.refreshRulebooks",
					"when": "view == rulebooks",
					"group": "navigation"
				},
				{
					"command": "rulebooks.addRulebook",
					"when": "view == rulebooks",
					"group": "navigation"
				},
				{
					"command": "configFiles.refreshConfigFiles",
					"when": "view == configFiles",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "configMate.check",
					"when": "view == rulebooks && viewItem == rulebook",
					"group": "inline"
				},
				{
					"command": "rulebooks.deleteRulebook",
					"when": "view == rulebooks && viewItem == rulebook",
					"group": "inline"
				}
			]
		},
		"semanticTokenTypes": [
			{
				"id": "templateType",
				"superType": "type",
				"description": "A template type."
			}
		],
		"semanticTokenModifiers": [
			{
				"id": "native",
				"description": "Annotates a symbol that is implemented natively"
			}
		]
	},
	"configurationDefaults": {
		"cmrb": {
			"editor.semanticHighlighting.enabled": true
		}
	},
	"scripts": {
		"server": "(cd configmate && ./bin/configm serve)",
		"build-server": "(cd configmate && make configm)",
		"kill-server": "sudo fuser -k 10007/tcp",
		"publish": "vsce publish patch --no-git-tag-version",
		"package": "vsce package --no-git-tag-version",
		"vscode:prepublish": "npm run esbuild-base -- --minify",
		"esbuild-base": "esbuild ./client/src/extension.ts --bundle --outfile=client/out/main.js --external:vscode --format=cjs --platform=node",
		"esbuild": "npm run esbuild-base -- --sourcemap",
		"esbuild-watch": "npm run esbuild-base -- --sourcemap --watch=forever",
		"test-compile": "tsc -p ./",
		"compile": "tsc -b ",
		"watch": "npm run esbuild-watch & npm run compile -- --watch",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"eslint": "^8.53.0",
		"typescript": "^5.2.0"
	}
}