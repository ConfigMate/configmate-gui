{
	"name": "configmate-gui",
	"displayName": "ConfigMate",
	"description": "",
	"version": "0.2.14",
	"publisher": "ConfigMate",
	"private": true,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/ConfigMate/configmate-gui"
	},
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"main": "./out/main.js",
	"configurationDefaults": {
		"json": {
			"editor.semanticHighlighting.enabled": true
		}
	},
	"contributes": {
		"views": {
			"configmate": [
				{
					"id": "rulebooks",
					"name": "Rulebooks",
					"icon": "$(book)",
					"contextualTitle": "ConfigMate"
				},
				{
					"id": "configFiles",
					"name": "Configuration Files",
					"icon": "$(settings)",
					"contextualTitle": "ConfigMate"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "rulebooks",
				"contents": "No rulebooks found.\n[Add Rulebook](command:rulebooks.addRulebook)"
			},
			{
				"view": "configFiles",
				"contents": "Select a rulebook above to view its configuration files"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "configmate",
					"title": "ConfigMate",
					"icon": "$(beaker)"
				}
			]
		},
		"commands": [
			{
				"command": "rulebooks.openRulebook",
				"category": "Custom",
				"title": "Open Rulebook"
			},
			{
				"command": "rulebooks.refreshRulebooks",
				"title": "Refresh Rulebooks",
				"icon": "$(refresh)"
			},
			{
				"command": "rulebooks.addRulebook",
				"title": "Add Rulebook",
				"icon": "$(add)"
			},
			{
				"command": "rulebooks.deleteRulebook",
				"title": "Delete Rulebook",
				"icon": "$(trash)"
			},
			{
				"command": "configFiles.openConfigFile",
				"category": "Custom",
				"title": "Open Config File"
			},
			{
				"command": "configFiles.refreshConfigFiles",
				"title": "Refresh Config Files",
				"icon": "$(refresh)"
			},
			{
				"command": "configMate.check",
				"title": "Check",
				"icon": "$(check)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "rulebooks.refreshRulebooks",
					"when": "view == rulebooks",
					"group": "navigation"
				},
				{
					"command": "rulebooks.addRulebook",
					"when": "view == rulebooks",
					"group": "navigation"
				},
				{
					"command": "configFiles.refreshConfigFiles",
					"when": "view == configFiles",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "configMate.check",
					"when": "view == rulebooks && viewItem == rulebook",
					"group": "inline"
				},
				{
					"command": "rulebooks.deleteRulebook",
					"when": "view == rulebooks && viewItem == rulebook",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"build-server": "(cd configmate && make configm && mkdir -p ../out/configmate/bin && cp ./configmate.exe ../out/configmate && cp ./bin/configm ../out/configmate/bin)",
		"server": "(cd configmate && ./bin/configm serve)",
		"kill-server": "sudo fuser -k 10007/tcp",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "eslint --ext .ts --ignore-path .eslintignore .",
		"test": "tsc -p ./ && node out/test/runTest.js",
		"publish": "vsce publish patch --no-git-tag-version",
		"vscode:prepublish": "npm run esbuild-base -- --minify",
		"esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
		"esbuild": "npm run esbuild-base -- --sourcemap",
		"esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
		"test-compile": "tsc -p ./"
	},
	"devDependencies": {
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "^16.18.34",
		"@types/vscode": "^1.73.0",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"@vscode/test-electron": "^2.3.4",
		"esbuild": "^0.19.5",
		"eslint": "^8.52.0",
		"mocha": "^10.2.0",
		"typescript": "~5.1.3",
		"url": "^0.11.3"
	},
	"dependencies": {
		"axios": "^1.6.0",
		"child_process": "^1.0.2",
		"toml": "^3.0.0"
	}
}